<%= form_for @recipe do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br><br>

    <%= f.fields_for :ingredients do |ing| %>
        <%= ing.label "Ingredients" %><br>
        <%= ing.label :name %>
        <%= ing.text_field :name %><br><br>
        <%= ing.label :quantity %>
        <%= ing.text_field :quantity %><br><br>
    <% end %>

    <%= f.submit %>
<% end %>